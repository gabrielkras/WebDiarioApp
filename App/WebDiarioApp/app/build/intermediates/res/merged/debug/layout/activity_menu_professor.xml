<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/verde_claro"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logoWebDiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/webdiariologo" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        tools:context=".MenuProfessorActivity">


        <ImageButton
            android:id="@+id/imageButtonExibirMateriasProfessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionMaterias"
            android:onClick="exibirMateriasProfessor"
            android:src="@drawable/materias" />


        <TextView
            android:id="@+id/textViewDescricaoMaterias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="0"
            android:text="@string/contentDescriptionMaterias"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButtonChamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionChamada"
            android:onClick="fazerChamada"
            android:src="@drawable/chamada" />

        <TextView
            android:id="@+id/textViewDescricaoChamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="0"
            android:text="@string/contentDescriptionChamada"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <ImageButton
            android:id="@+id/imageButtonAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionAlunos"
            android:onClick="exibirAlunos"
            android:src="@drawable/alunos" />

        <TextView
            android:id="@+id/textViewDescricaoAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="1"
            android:text="@string/contentDescriptionAlunos"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButtonLogoffProfessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionLogoff"
            android:onClick="sairMenu"
            android:src="@drawable/sair" />

        <TextView
            android:id="@+id/textViewSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="1"
            android:text="@string/btnSair"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </GridLayout>


</RelativeLayout>


