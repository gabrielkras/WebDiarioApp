            android:name="com.example.bruno.webdiarioapp.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bruno.webdiarioapp.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.MenuProfessorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.ListaMateriasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.MenuAlunoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.ChamadaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.ListaAlunosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.ListaProfessoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.MateriaDetalheActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.ProfessorDetalheActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.bruno.webdiarioapp.AlunoDetalheActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>