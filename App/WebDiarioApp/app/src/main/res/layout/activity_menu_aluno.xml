<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/verde_claro"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logoWebDiario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/webdiariologo" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        tools:context="com.example.bruno.webdiarioapp.MenuAlunoActivity">

        <ImageButton
            android:id="@+id/imageButtonMateriasAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionMaterias"
            android:onClick="exibirMateriasAluno"
            android:src="@drawable/materias" />

        <TextView
            android:id="@+id/textViewDescricaoMaterias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="0"
            android:text="@string/contentDescriptionMaterias"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButtonListarProfessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionProfessor"
            android:onClick="exibirProfessores"
            android:src="@drawable/professor" />

        <TextView
            android:id="@+id/textViewDescricaoChamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="0"
            android:text="@string/contentDescriptionProfessor"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButtonPresenca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionPresenca"
            android:onClick="verPresencas"
            android:src="@drawable/presenca" />

        <TextView
            android:id="@+id/textViewDescricaoAlunos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="1"
            android:text="@string/contentDescriptionPresenca"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/imageButtonLogoffAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:background="@null"
            android:contentDescription="@string/contentDescriptionAlunos"
            android:onClick="sairMenu"
            android:src="@drawable/sair" />

        <TextView
            android:id="@+id/textViewSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:layout_row="1"
            android:text="@string/btnSair"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </GridLayout>
</RelativeLayout>
