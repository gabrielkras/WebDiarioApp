---------
{
  "type": "ok",
  "title": "Operacao realizada com sucesso!",
  "statusCode": 200,
  "message": "Listagem de Alunos realizada com sucesso!",
  "extraInformation": {
	"fouls": [
		"subject": {
			"name": "Eletiva II",
	    		"abbreviation": "ELTII",
			"totalFouls": [
				{
					"quantity": 4,
					"date":"2016-03-16"
				}
				{
					"quantity": 2,
					"date":"2016-03-26"
				}
				{
					"quantity": 4,
					"date":"2016-03-30"
				}
			]
		}
	]
}


